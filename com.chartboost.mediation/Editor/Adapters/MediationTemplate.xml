<?xml version="1.0" encoding="UTF-8"?>
<dependencies>
    <androidPackages>
        <!-- Chartboost Mediation SDK Maven Repo -->
        <repositories>
            <repository>https://cboost.jfrog.io/artifactory/chartboost-mediation/</repository>
        </repositories>

        <!-- Chartboost Mediation Android SDK -->
        <androidPackage spec="com.chartboost:chartboost-mediation-sdk:%ANDROID_VERSION%+" />
    </androidPackages>
    <iosPods>
        <!-- Chartboost Mediation iOS SDK -->
        <iosPod name="ChartboostMediationSDK" version="~> %IOS_VERSION%">
            <sources>
                <source>https://github.com/CocoaPods/Specs</source>
            </sources>
        </iosPod>
    </iosPods>
</dependencies>
