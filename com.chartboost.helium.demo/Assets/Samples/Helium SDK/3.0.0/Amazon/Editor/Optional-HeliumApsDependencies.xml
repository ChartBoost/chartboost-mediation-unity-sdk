        <!-- APS Android SDK -->
        <androidPackage spec="com.amazon.android:aps-sdk:9.4.3"/>

        <!-- Other Adapter Dependencies -->
        <androidPackage spec="org.jetbrains.kotlinx:kotlinx-coroutines-android:1.6.0"/>

    </androidPackages>
    <iosPods>
        <!-- APS iOS SDK -->
        <iosPod name="ChartboostHeliumAdapterAPS" version="~> 2.10">
            <sources>
